<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/edit.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.min.css" integrity="sha512-vEia6TQGr3FqC6h55/NdU3QSM5XR6HSl5fW71QTKrgeER98LIMGwymBVM867C1XHIkYD9nMTfWK2A0xcodKHNA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body onload="document.body.style.opacity='1'">
   
    <div id="main">
        <a href="/profile/<%= user._id %>"><button style="height: 6vh; width: 8vw; font-size: 100%; cursor: pointer;  color : white; position: absolute; top: 5%; left: 5%; transform: translate(0% , 0%);" id="sub">Back</button></a>
        
        <form action="/editimg" method="POST" enctype="multipart/form-data" id="i">
            
            <div id="img">
                <img src="<%= user.profileimg.url %>" alt="">
            </div>
            <input type="file" name="files">
            <button type="submit" style="display: none;">submit</button>
        </form>
        <button><a href="/remove/<%= user._id %>">Remove Profile Image</a></button>
        <form action="/edit/<%= user._id %>" method="post" id="o1">
         
            <div class="sec">
                <h1>Name</h1>
                <input type="text" name="name" value="<%= user.name %>">
            </div>
            <div class="sec">
                <h1>Username</h1>
                <input style="cursor : not-allowed " type="text" name="username" value="<%= user.username %>" disabled>
                <label style="color : red" for="username">not editable</label>
            </div>
            <div class="sec">
                <h1>Email</h1>
                <input type="email" name="email" value="<%= user.email %>">
            </div>
            <div class="sec">
                <h1>Bio</h1>
                <textarea name="bio" id="text" class="mycss"  cols="99" rows="8"> <%= user.bio %> </textarea>
            </div>
         
            <button style="height: 6vh; width: 8vw; font-size: 100%; cursor: pointer;  color : white; position: absolute; top: 5%; right: 5%; transform: translate(0% , 0%);" type="submit" id="sub">Done</button>


        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.min.js" integrity="sha512-hkvXFLlESjeYENO4CNi69z3A1puvONQV5Uh+G4TUDayZxSLyic5Kba9hhuiNLbHqdnKNMk2PxXKm0v7KDnWkYA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        document.querySelector("#img").addEventListener("click",function(){
            document.querySelector('input[type="File"]').click();
        })
        document.querySelector('input[type="File"]').addEventListener("change",function(){
            document.querySelector('#i button').click()
        })

        $('#text').emojioneArea({
    pickerPosition :'top',
    filtersPosition: "bottom",
tonesStyle: "square",
shortnames: true,
// tones:false,
search:true,

  })
    </script> 
</body>

</html>